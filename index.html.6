<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NASA Yearlong Simulated Mars Mission Application</title>
</head>
<body>
    <form>
        <!-- Contact Info Section -->
        <section id="contact-info">
            <h2>Contact Info</h2>
            <label>
                Full Name:
                <input type="text" name="full-name">
            </label>
            <label>
                Address:
                <input type="text" name="address">
            </label>
            <label>
                Email:
                <input type="email" name="email">
            </label>
        </section>

        <!-- About Section -->
        <section id="about">
            <h2>About</h2>
            <fieldset>
                <legend>University Degree</legend>
                <ul>
                    <li>
                        <label>
                            <input type="radio" name="degree" value="military">
                            Military
                        </label>
                    </li>
                    <li>
                        <label>
                            <input type="radio" name="degree" value="technical">
                            Technical
                        </label>
                    </li>
                    <li>
                        <label>
                            <input type="radio" name="degree" value="student">
                            Student
                        </label>
                    </li>
                </ul>
            </fieldset>
            <p id="bio-p">
                <label for="bio">BIO</label>
                <textarea name="bio" id="bio"></textarea>
            </p>
        </section>

        <!-- Participation Details Section -->
        <section id="participation-details">
            <h3>Participation Details</h3>
            <details>
                <summary>More info</summary>
                Please, provide information about your preferences. We don't guarantee them, but we will try..
            </details>
            <p id="uniform-color-p">
                <label for="uniform-color">Uniform color</label>
                <input type="color" name="uniform-color" id="uniform-color">
            </p>
            <p id="preferred-mission-role-p">
                <label for="preferred-mission-role">Preferred Role in a mission</label>
                <input type="text" name="preferred-mission-role" id="preferred-mission-role" list="mission-roles">
                <datalist id="mission-roles">
                    <option value="Pilot"></option>
                    <option value="Doctor"></option>
                    <option value="Scientist"></option>
                    <option value="Experimentator"></option>
                </datalist>
            </p>
        </section>

        <!-- Agree and Submit Section -->
        <section id="agree-and-submit">
            <label>
                <input type="checkbox" name="user-agree">
                I agree on terms and conditions.
            </label>
            <button type="submit">Send your data to NASA</button>
        </section>
    </form>
</body>
</html>
